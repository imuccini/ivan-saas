{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^generate", "^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"],
			"env": [
				"DATABASE_URL",
				"DIRECT_URL",
				"BETTER_AUTH_SECRET",
				"NEXT_PUBLIC_*"
			]
		},
		"type-check": {},
		"clean": {
			"cache": false
		},
		"generate": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"dependsOn": ["^generate"],
			"persistent": true
		},
		"export": {
			"outputs": ["out/**"]
		},
		"lint": {},
		"start": {
			"cache": false,
			"dependsOn": ["^generate", "^build"],
			"persistent": true
		}
	}
}
